{
  "name": "selectable-grid",
  "version": "1.1.2",
  "description": "selectable-grid",
  "author": "Pisyukaev",
  "license": "MIT",
  "repository": "Pisyukaev/selectable-grid",
  "packageManager": "pnpm@7.5.0",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.es.js",
  "main": "./dist/index.cjs.js",
  "main:umd": "./dist/index.umd.js",
  "files": [
    "dist/index.cjs.js",
    "dist/index.es.js",
    "dist/index.umd.js",
    "dist/index.d.ts",
    "dist/types.d.ts",
    "dist/style.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.es.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./css": "./dist/style.css"
  },
  "scripts": {
    "dev": "npm-run-all --parallel build:watch dev:website",
    "dev:website": "pnpm -r --filter=website run dev",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "build:website": "pnpm build && pnpm -r --filter=website run build",
    "prepublishOnly": "pnpm build",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.3.0",
    "@types/node": "^18.6.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-react": "^2.0.0",
    "@vitest/ui": "^0.20.2",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vite-plugin-dts": "^1.4.0",
    "vitest": "^0.20.2"
  }
}
